{
  "name": "musebox-desktop",
  "productName": "MuseBox",
  "version": "1.0.0",
  "description": "靈感卡片盒 - 桌面版",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:start": "concurrently \"vite\" \"wait-on tcp:5173 && electron .\"",
    "electron:pack": "tsc && vite build && electron-builder --win --x64"
  },
  "author": "MuseBox User",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.38.0",
    "framer-motion": "^12.0.0",
    "lucide-react": "^0.300.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.musebox.app",
    "productName": "MuseBox",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}